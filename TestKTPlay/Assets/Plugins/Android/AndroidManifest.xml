<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ktplay.test"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ktplay.test.TestKTPlayActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.ktplay.test.TestActivity0"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            >
        </activity>
 
        <activity
            android:name="com.ktplay.test.TestActivity1"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            >
        </activity>
        
        <!-- KTPlay SDK配置开始 -->
        <activity
            android:name="com.ktplay.activity.GetPhotoActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:screenOrientation="user"
            android:windowSoftInputMode="adjustPan|adjustUnspecified" >
        </activity>
        
        <meta-data
            android:name="DEFAULT"
            android:value="GP"
            />
        <!-- KTPlay SDK配置结束 -->
         
         
    </application>

    <!-- KTPlay SDK 权限配置开始 -->
	<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- KTPlay SDK 权限配置结束 -->
    
</manifest>
